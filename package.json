{
  "name": "vite-web-extension",
  "version": "1.0.0",
  "description": "Браузерное расширение для защиты от агрессивного контента в интернете.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YarikMix/Purify.git"
  },
  "scripts": {
    "build": "vite build --config vite.config.chrome.ts",
    "build:chrome": "vite build --config vite.config.chrome.ts",
    "build:firefox": "vite build --config vite.config.firefox.ts",
    "dev": "nodemon --config nodemon.chrome.json",
    "dev:chrome": "nodemon --config nodemon.chrome.json",
    "dev:firefox": "nodemon --config nodemon.firefox.json",
    "clear_dist:windows": "if exist dist_purify rd /s /q dist_purify",
    "clear_dist:linux": "rm -rf dist_purify",
    "zip:windows": "npm run clear_dist:windows && npm run build && tar.exe -a -c -f dist_purify.zip dist_purify",
    "zip:linux": "npm run clear_dist:linux && npm run build && zip -r dist_purify.zip dist_purify/*"
  },
  "type": "module",
  "dependencies": {
    "@types/jquery": "^3.5.32",
    "@types/mark.js": "^8.11.12",
    "@types/throttle-debounce": "^5.0.2",
    "axios": "^1.8.3",
    "clsx": "^2.1.1",
    "eslint-plugin-prettier": "^5.2.6",
    "hotkeys-js": "^3.13.9",
    "jquery": "^3.7.1",
    "mark.js": "^8.11.1",
    "prettier": "^3.5.3",
    "rc-progress": "^4.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.4.0",
    "react-spring": "^9.7.5",
    "throttle-debounce": "^5.0.2",
    "vite-plugin-svgr": "^4.3.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.32",
    "@tailwindcss/vite": "^4.0.12",
    "@types/chrome": "^0.0.309",
    "@types/node": "^22.13.9",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "fs-extra": "^11.3.0",
    "nodemon": "^3.1.9",
    "tailwindcss": "^4.0.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
